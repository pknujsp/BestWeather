<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="AppTheme.White" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="textColor">@color/black</item>
        <item name="weatherCardBackgroundColor">#80FFFFFF</item>
        <item name="toolbarTextColor">@color/black</item>
        <item name="toolbarIconColor">@color/black</item>
        <item name="backgroundColor">#D6D6D6</item>
        <item name="progressViewBackgroundColor">#ECECEC</item>
        <item name="textColorInProgressView">@color/black</item>
        <item name="iconColor">@color/black</item>
        <item name="progressViewIndicatorColor">@color/blue</item>
    </style>

    <style name="AppTheme.Black" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="textColor">@color/white</item>
        <item name="weatherCardBackgroundColor">#80000000</item>
        <item name="toolbarTextColor">@color/white</item>
        <item name="toolbarIconColor">@color/white</item>
        <item name="backgroundColor">#323232</item>
        <item name="progressViewBackgroundColor">#686868</item>
        <item name="textColorInProgressView">@color/white</item>
        <item name="iconColor">@color/white</item>
        <item name="progressViewIndicatorColor">@color/white</item>
    </style>

</resources>