<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="AppTheme.Black" parent="DefaultAppTheme">
        <item name="textColor">@color/black</item>
        <item name="textColorInDetailAndComparison">@color/black</item>
        <item name="weatherCardBackgroundColor">@color/darkForecastCardBackgroundColor</item>
        <item name="textColorInWeatherCard">@color/white</item>
        <item name="toolbarTextColor">@color/black</item>
        <item name="toolbarIconColor">@color/black</item>
        <item name="backgroundColor">@color/white</item>
        <item name="progressViewBackgroundColor">@color/app_main_color</item>
        <item name="textColorInProgressView">@color/black</item>
        <item name="iconColor">@color/blue</item>
        <item name="progressViewIndicatorColor">@color/blue</item>
        <item name="lineColor">@color/white</item>

    </style>

    <style name="ThemeOverlay.BestWeather.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/light_blue_600</item>
        <item name="appWidgetTextColor">@color/light_blue_50</item>
    </style>

    <style name="DialogActivityTheme" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="AppTheme.Black.Starting" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/transparent</item>
        <item name="postSplashScreenTheme">@style/AppTheme.Black</item>

    </style>

</resources>