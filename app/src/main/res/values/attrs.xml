<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ForecastsCardView">
        <attr name="forecasts_name" format="string" />
        <attr name="visibility_compare_btn" format="enum">
            <!-- Visible on screen; the default value. -->
            <enum name="visible" value="0" />
            <!-- Not displayed, but taken into account during layout (space is left for it). -->
            <enum name="invisible" value="4" />
            <!-- Completely hidden, as if the view had not been added. -->
            <enum name="gone" value="8" />
        </attr>
        <attr name="visibility_detail" format="enum">
            <!-- Visible on screen; the default value. -->
            <enum name="visible" value="0" />
            <!-- Not displayed, but taken into account during layout (space is left for it). -->
            <enum name="invisible" value="4" />
            <!-- Completely hidden, as if the view had not been added. -->
            <enum name="gone" value="8" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CustomProgressView">
        <attr name="contentViewId" format="reference" />
    </declare-styleable>
</resources>