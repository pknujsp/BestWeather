<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ForecastsCardView">
        <attr name="forecasts_name" format="string" />
        <attr name="visibility_compare_btn" format="enum">
            <!-- Visible on screen; the default value. -->
            <enum name="visible" value="0" />
            <!-- Not displayed, but taken into account during layout (space is left for it). -->
            <enum name="invisible" value="4" />
            <!-- Completely hidden, as if the view had not been added. -->
            <enum name="gone" value="8" />
        </attr>
        <attr name="visibility_detail" format="enum">
            <!-- Visible on screen; the default value. -->
            <enum name="visible" value="0" />
            <!-- Not displayed, but taken into account during layout (space is left for it). -->
            <enum name="invisible" value="4" />
            <!-- Completely hidden, as if the view had not been added. -->
            <enum name="gone" value="8" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ViewPagerIndicator">
        <attr name="IndicatorUnselectedDotDrawable" format="reference" />
        <attr name="IndicatorSelectedDotDrawable" format="reference" />
    </declare-styleable>

    <attr name="textColor" format="color" />
    <attr name="textColorInDetailAndComparison" format="color" />
    <attr name="weatherCardBackgroundColor" format="color" />
    <attr name="textColorInWeatherCard" format="color" />
    <attr name="toolbarTextColor" format="color" />
    <attr name="toolbarIconColor" format="color" />
    <attr name="backgroundColor" format="color" />
    <attr name="progressViewBackgroundColor" format="color" />
    <attr name="progressViewIndicatorColor" format="color" />
    <attr name="textColorInProgressView" format="color" />
    <attr name="iconColor" format="color" />
    <attr name="lineColor" format="color" />
    <attr name="alertDialogStyle" format="reference" />


    <declare-styleable name="CustomSearchView">
        <attr name="hint" format="string" />
        <attr name="backBtnVisibility" format="enum">
            <!-- Visible on screen; the default value. -->
            <enum name="visible" value="0" />
            <!-- Not displayed, but taken into account during layout (space is left for it). -->
            <enum name="invisible" value="4" />
            <!-- Completely hidden, as if the view had not been added. -->
            <enum name="gone" value="8" />
        </attr>
        <attr name="searchBtnVisibility" format="enum">
            <!-- Visible on screen; the default value. -->
            <enum name="visible" value="0" />
            <!-- Not displayed, but taken into account during layout (space is left for it). -->
            <enum name="invisible" value="4" />
            <!-- Completely hidden, as if the view had not been added. -->
            <enum name="gone" value="8" />
        </attr>
    </declare-styleable>

    <declare-styleable name="DrawableTextViewGroup">
        <attr name="drawableColor" format="color" />
        <attr name="drawableSize" format="dimension" />
        <attr name="drawableSrc" format="reference" />
        <attr name="text" format="string" />
        <attr name="textColor" />
    </declare-styleable>

    <declare-styleable name="NotScrolledView">
        <attr name="iconVisibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="4" />
            <enum name="gone" value="8" />
        </attr>
        <attr name="android:text" format="string" />
        <attr name="iconSrc" format="reference" />
    </declare-styleable>
    <declare-styleable name="AppWidgetAttrs">
        <attr name="appWidgetBackgroundColor" format="color" />
        <attr name="appWidgetTextColor" format="color" />
    </declare-styleable>
</resources>