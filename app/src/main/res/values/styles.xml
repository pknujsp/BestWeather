<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_shadow">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_shadow_black">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">2.1</item>
    </style>

    <style name="forecasts_card_background">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/simple_weather_card</item>
    </style>

    <style name="sub_title_in_forecast_card">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="label_in_simple_airquality_forecast_card">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="value_in_simple_airquality_forecast_card">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="Theme.AppCompat.Transparent.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog"></style>

    <style name="SettingsLabel" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="WidgetConfigureConfig" parent="">
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="SettingsValue" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DayCheckBox" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/dayCheckBoxHeight</item>
        <item name="android:layout_height">@dimen/dayCheckBoxHeight</item>
        <item name="android:button">@color/transparent</item>
        <item name="android:background">@drawable/day_checkbox</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:thumb">@drawable/selector_switch_thumb</item>
        <item name="switchMinWidth">48dp</item>
    </style>

    <style name="DialogTransparent">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#B8A7A7</item>
    </style>

    <style name="CardBackground">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:elevation">6dp</item>
    </style>


    <style name="ListItemBackground">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:elevation">2dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="ChartBackground">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="TextViewInSideNav">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WidgetBackground">
        <item name="android:background">@drawable/widget_background</item>
        <item name="android:backgroundTint">@color/widgetBackgroundColor</item>
    </style>
</resources>