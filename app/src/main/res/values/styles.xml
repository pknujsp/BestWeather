<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_shadow">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <style name="forecasts_card_background">
        <item name="backgroundColor">@color/weather_card_background_color</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/simple_weather_card</item>
    </style>

    <style name="sub_title_in_forecast_card">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="label_in_simple_airquality_forecast_card">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="value_in_simple_airquality_forecast_card">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>