<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_shadow">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_shadow_black">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="forecasts_card_background">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/simple_weather_card</item>
    </style>

    <style name="sub_title_in_forecast_card">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="label_in_simple_airquality_forecast_card">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="value_in_simple_airquality_forecast_card">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="AlertDialogWhite" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/black</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
    </style>

    <style name="AlertDialogBlack" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="PreferenceThemeBlack" parent="PreferenceThemeOverlay">
        <item name="android:textAppearanceLarge">@style/PreferenceLargeTextBlack</item>
        <item name="android:textAppearanceMedium">@style/PreferenceMediumTextBlack</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:colorAccent">@color/white</item>
    </style>

    <style name="PreferenceLargeTextBlack">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="PreferenceMediumTextBlack">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
</resources>