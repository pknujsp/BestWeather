<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <RelativeLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="16dp"
                >

                <LinearLayout
                    android:id="@+id/header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_btn_background"
                    android:backgroundTint="#CDFFFFFF"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="12dp"
                    >


                    <ImageView
                        android:id="@+id/back_btn"
                        android:layout_width="@dimen/btnSizeInToolbar"
                        android:layout_height="@dimen/btnSizeInToolbar"
                        android:background="?attr/selectableItemBackground"
                        android:scaleType="center"
                        android:src="@drawable/back"
                        app:tint="?attr/toolbarIconColor"
                        />

                    <TextView
                        android:id="@+id/search_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:drawableLeft="@drawable/search"
                        android:gravity="center_vertical"
                        android:text="@string/find_address"
                        android:textColor="@color/black"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/rounded_btn_background"
                    android:backgroundTint="#CDFFFFFF"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="12dp"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:drawableLeft="@drawable/ic_baseline_stars_24"
                        android:drawableTint="@color/design_default_color_primary"
                        android:gravity="center_vertical"
                        android:text="@string/favorite"
                        android:textColor="@color/design_default_color_primary"
                        />

                </LinearLayout>

            </RelativeLayout>


        </FrameLayout>

        <include
            android:id="@+id/bottom_sheet_search_place"
            layout="@layout/view_bottom_sheet_search_place"
            />

        <include
            android:id="@+id/placeslist_bottom_sheet"
            layout="@layout/place_list_bottom_sheet_view"
            />

        <include
            android:id="@+id/favorites_bottom_sheet"
            layout="@layout/favorites_bottom_sheet_view"
            />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>