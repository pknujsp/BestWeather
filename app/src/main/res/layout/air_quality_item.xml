<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="8dp"
    app:layout_columnWeight="1">

    <ImageView
        android:id="@+id/label_icon"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:src="@drawable/temp_icon" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@id/label_icon"
        android:text="label"
        android:textColor="?attr/textColorInWeatherCard"
        android:textSize="16sp" />


    <TextView

        android:id="@+id/value_int"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label"
        android:layout_alignLeft="@id/label"
        android:text="valueInt"
        android:textColor="?attr/textColorInWeatherCard"
        android:textSize="15sp" />

    <TextView

        android:id="@+id/value_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/value_int"
        android:layout_alignLeft="@id/label"
        android:text="valueStr"
        android:textColor="?attr/textColorInWeatherCard"
        android:textSize="16sp" />


</RelativeLayout>