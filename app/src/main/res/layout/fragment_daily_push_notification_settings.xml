<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/root_scroll_View"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/save"
        android:layout_below="@id/toolbar"
        android:overScrollMode="never"
        android:paddingHorizontal="16dp"
        android:scrollbars="none"
        >

        <LinearLayout
            android:id="@+id/widget_settings_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/preview_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:clickable="false"
                android:clipChildren="false"
                android:focusable="false"
                android:minHeight="40dp"
                app:cardElevation="4dp"
                />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:overScrollMode="never"
                android:scrollbars="none"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:id="@+id/settingsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <LinearLayout style="@style/SettingsLayout">

                            <TextView
                                style="@style/SettingsLabel"
                                android:text="@string/alarmClock"
                                />

                            <TextView
                                android:id="@+id/hours"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:text="07:00"
                                android:textColor="@color/blue"
                                android:textSize="23sp"
                                />

                        </LinearLayout>

                        <LinearLayout style="@style/SettingsLayout">


                            <TextView
                                style="@style/SettingsLabel"
                                android:text="@string/notificationType"
                                />

                            <Spinner
                                android:id="@+id/notificationTypesSpinner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />

                        </LinearLayout>

                        <include
                            android:id="@+id/commons"
                            layout="@layout/common_layout_notification_settings"
                            />


                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/save"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/save"
        />

</RelativeLayout>