<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/drawable"
            android:layout_width="@dimen/defaultImageSizeInDrawableWithText"
            android:layout_height="@dimen/defaultImageSizeInDrawableWithText"
            android:layout_marginRight="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/temp_icon" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:autoSizeTextType="uniform"
            android:text="text"
            android:textColor="@color/defaultTextColorInDrawableWithText" />

    </LinearLayout>
</layout>