<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        />

    <include
        android:id="@+id/map_buttons"
        layout="@layout/map_buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@id/barrier"
        app:layout_constraintRight_toRightOf="parent"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:barrierDirection="top"
        app:constraint_referenced_ids="previous_btn, datetime, next_btn"
        />


    <ImageButton
        android:id="@+id/previous_btn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/circle_btn_background"
        android:backgroundTint="@color/white"
        android:elevation="4dp"
        android:src="@drawable/ic_baseline_chevron_left_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/datetime"
        />


    <TextView
        android:id="@+id/datetime"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="26dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_btn_background_no_padding"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:drawablePadding="6dp"
        android:elevation="4dp"
        android:focusable="true"
        android:gravity="center"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="dateTime"
        android:textColor="@color/light_blue_600"
        android:textSize="14sp"
        app:drawableLeftCompat="@drawable/ic_baseline_play_arrow_24"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/previous_btn"
        app:layout_constraintRight_toLeftOf="@id/next_btn"
        />

    <ImageButton
        android:id="@+id/next_btn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/circle_btn_background"
        android:backgroundTint="@color/white"
        android:elevation="4dp"
        android:src="@drawable/ic_baseline_chevron_right_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/datetime"
        app:layout_constraintRight_toRightOf="parent"
        />


    <com.lifedawn.bestweather.commons.views.ProgressResultView
        android:id="@+id/progress_result_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        />

</androidx.constraintlayout.widget.ConstraintLayout>