<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/wind"
                style="@style/text_shadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="wind"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/precipitation"
                style="@style/text_shadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wind"
                android:layout_alignParentLeft="true"
                android:text="precipitation"
                android:textSize="18sp" />


            <LinearLayout
                android:id="@+id/weatherIconLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/precipitation"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/weather_icon"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/temp_icon" />

                <TextView
                    android:id="@+id/sky"
                    style="@style/text_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:text="weather"
                    android:textSize="23sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/temperature"
                style="@style/text_shadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/weatherIconLayout"
                android:layout_alignParentLeft="true"
                android:includeFontPadding="false"
                android:text="20"
                android:textSize="63sp" />

            <LinearLayout
                android:id="@+id/flickrLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/airQualityLayout"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/flickrlogo" />

                <TextView
                    android:id="@+id/flickrImageUrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="image"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/airQualityLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/temperature"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/air_quality"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/airQuality"
                    style="@style/text_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="@string/good"
                    android:textSize="18sp" />

            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>
</layout>