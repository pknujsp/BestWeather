<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        >


        <LinearLayout
            android:id="@+id/weatherIconLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/weather_icon"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginRight="6dp"
                android:scaleType="centerInside"
                android:src="@drawable/day_clear"
                />

            <TextView
                android:id="@+id/sky"
                style="@style/text_shadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:shadowColor="@color/black"
                android:text="weather"
                android:textColor="@color/white"
                android:textSize="23sp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/precipitation"
            style="@style/text_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weatherIconLayout"
            android:shadowColor="@color/black"
            android:text="precipitation"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            />


        <TextView
            android:id="@+id/wind"
            style="@style/text_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/airQualityLayout"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="6dp"
            android:shadowColor="@color/black"
            android:text="wind"
            android:textColor="@color/white"
            android:textSize="17sp"
            />


        <LinearLayout
            android:id="@+id/airQualityLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/feelsLikeTemp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="32dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/text_shadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:shadowColor="@color/black"
                android:text="@string/air_quality"
                android:textColor="@color/white"
                android:textSize="17sp"
                />

            <TextView
                android:id="@+id/airQuality"
                style="@style/text_shadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/black"
                android:text="@string/good"
                android:textColor="@color/white"
                android:textSize="17sp"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/temperature"
            style="@style/text_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/precipitation"
            android:layout_alignParentLeft="true"
            android:fontFamily="sans-serif-light"
            android:includeFontPadding="false"
            android:shadowColor="@color/black"
            android:text="10"
            android:textColor="@color/white"
            android:textSize="100sp"
            />

        <TextView
            android:id="@+id/tempUnit"
            style="@style/text_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/temperature"
            android:layout_toRightOf="@id/temperature"
            android:fontFamily="sans-serif-light"
            android:includeFontPadding="false"
            android:shadowColor="@color/black"
            android:text="℃"
            android:textColor="@color/white"
            android:textSize="44sp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/temperature"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/feelsLikeTemp"
            android:fontFamily="sans-serif-light"
            android:text="@string/real_feel_temperature_simple"
            style="@style/text_shadow"
            android:shadowColor="@color/black"
            android:textColor="@color/white"
            android:textSize="19sp"
            />

        <TextView
            android:id="@+id/feelsLikeTemp"
            style="@style/text_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/temperature"
            android:layout_toLeftOf="@id/feelsLikeTempUnit"
            android:fontFamily="sans-serif-light"
            android:includeFontPadding="false"
            android:shadowColor="@color/black"
            android:text="-20"
            android:textColor="@color/white"
            android:textSize="35sp"
            />

        <TextView
            android:id="@+id/feelsLikeTempUnit"
            style="@style/text_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/temperature"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif-light"
            android:includeFontPadding="false"
            android:shadowColor="@color/black"
            android:text="℃"
            android:textColor="@color/white"
            android:textSize="21sp"
            />


        <TextView
            android:id="@+id/tempDescription"
            style="@style/text_shadow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperature"
            android:shadowColor="@color/black"
            android:text="@string/temp_yesterdayTemperature"
            android:textColor="@color/white"
            android:textSize="16sp"
            />


    </RelativeLayout>

</layout>