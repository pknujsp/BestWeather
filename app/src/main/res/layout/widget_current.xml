<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/appWidgetBackgroundColor"
    android:clickable="true"
    android:focusable="true"
    android:padding="@dimen/widget_padding"
    android:theme="@style/ThemeOverlay.BestWeather.AppWidgetContainer">

    <LinearLayout
        android:id="@+id/content_container"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/refreshIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/refreshDateTime"
                android:layout_alignBottom="@id/refreshDateTime"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerInside"
                android:src="@drawable/refresh"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/refreshDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/refreshIcon"
                android:text="@string/updated_time"
                android:textColor="@color/white"
                android:textSize="@dimen/refreshDateTimeTextSizeInWidgetCurrent" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">


            <android.widget.TextClock
                android:id="@+id/clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="4dp"
                android:singleLine="true"
                android:text="12:00"
                android:textColor="@color/white"
                android:textSize="@dimen/clockTextSizeInWidgetCurrent" />

            <ImageView
                android:id="@+id/current_weather_icon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_below="@id/clock"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:layout_marginRight="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/day_clear" />

            <TextView
                android:id="@+id/current_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/current_weather_icon"
                android:layout_alignBottom="@id/current_weather_icon"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/current_weather_icon"
                android:gravity="center_vertical"
                android:text="20Â°"
                android:textColor="@color/white"
                android:textSize="@dimen/tempTextSizeInWidgetCurrent" />

        </RelativeLayout>


        <TextView
            android:id="@+id/addressName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="@string/address_name"
            android:textColor="@color/white"
            android:textSize="@dimen/addressTextSizeInWidgetCurrent" />
    </LinearLayout>


    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateTint="@color/white"
        android:visibility="gone" />

    <include
        layout="@layout/layout_warning_for_remoteviews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone" />


</FrameLayout>