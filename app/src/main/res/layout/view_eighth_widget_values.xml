<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/weatherIcon"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/day_clear" />

            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:includeFontPadding="false"
                android:text="14Â°"
                android:textColor="@color/widgetTextColor"
                android:textSize="@dimen/tempTextSizeInEighthWidget" />

        </LinearLayout>

        <TextView
            android:id="@+id/precipitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:includeFontPadding="false"
            android:text="@string/not_precipitation"
            android:textColor="@color/widgetTextColor"
            android:textSize="@dimen/precipitationTextSizeInEighthWidget" />

        <TextView
            android:id="@+id/airQuality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/air_quality"
            android:textColor="@color/widgetTextColor"
            android:textSize="@dimen/airQualityTextSizeInEighthWidget" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hourlyForecast"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical" />

</LinearLayout>