<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="15"
        android:textAlignment="center"
        android:textColor="@color/widgetTextColor"
        android:textSize="@dimen/dateTimeTextSizeInSimpleWidgetForecastItem" />

    <LinearLayout
        android:id="@+id/iconLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageView
            android:id="@+id/leftIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/day_clear" />

        <ImageView
            android:id="@+id/rightIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/day_clear" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/popLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginRight="1dp"
            android:scaleType="centerInside"
            android:src="@drawable/pop" />

        <TextView
            android:id="@+id/pop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="20%"
            android:textColor="@color/widgetTextColor"
            android:textSize="@dimen/popTextSizeInSimpleWidgetForecastItem" />

    </LinearLayout>

    <TextView
        android:id="@+id/temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="20Â°"
        android:textAlignment="center"
        android:textColor="@color/widgetTextColor"
        android:textSize="@dimen/tempTextSizeInSimpleWidgetForecastItem" />

</LinearLayout>
