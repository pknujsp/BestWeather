<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="4.10 Fri"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:00"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/weatherIcon"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_marginRight="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/day_clear" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@id/temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="15ยบ"
                        android:textColor="@color/black"
                        android:textSize="38sp" />

                    <LinearLayout
                        android:id="@+id/popLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:labelFor="@id/pop"
                            android:text="@string/probability_of_precipitation" />

                        <TextView
                            android:id="@+id/pop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20%"
                            android:textColor="@color/blue" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/precipitationVolumeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:labelFor="@id/precipitationVolume"
                            android:text="@string/precipitation_volume" />

                        <TextView
                            android:id="@+id/precipitationVolume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="1.0mm"
                            android:textColor="@color/blue" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rainVolumeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:labelFor="@id/pop"
                            android:text="@string/rain_volume" />

                        <TextView
                            android:id="@+id/rainVolume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.0mm"

                            android:textColor="@color/blue" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/snowVolumeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:labelFor="@id/snowVolume"
                            android:text="@string/snow_volume" />

                        <TextView
                            android:id="@+id/snowVolume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="1.0cm"
                            android:textColor="@color/blue" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</layout>