<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/daily_forecast_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:columnCount="4"
        app:rowCount="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_columnWeight="1">

            <TextView
                android:id="@+id/daily_date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="clock"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/daily_left_weather_icon1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/day_clear" />

                <ImageView
                    android:id="@+id/daily_right_weather_icon1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/day_clear" />

            </LinearLayout>

            <TextView
                android:id="@+id/daily_temperature1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="temperature"
                android:textColor="@color/white"

                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_columnWeight="1">

            <TextView
                android:id="@+id/daily_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="clock"
                android:textColor="@color/white"

                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/daily_left_weather_icon2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/day_clear" />

                <ImageView
                    android:id="@+id/daily_right_weather_icon2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/day_clear" />

            </LinearLayout>

            <TextView
                android:id="@+id/daily_temperature2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="temperature"
                android:textColor="@color/white"

                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_columnWeight="1">

            <TextView
                android:id="@+id/daily_date3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="clock"
                android:textColor="@color/white"

                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/daily_left_weather_icon3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/day_clear" />

                <ImageView
                    android:id="@+id/daily_right_weather_icon3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/day_clear" />

            </LinearLayout>

            <TextView
                android:id="@+id/daily_temperature3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="temperature"

                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_columnWeight="1">

            <TextView
                android:id="@+id/daily_date4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="clock"

                android:textColor="@color/white"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/daily_left_weather_icon4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/day_clear" />

                <ImageView
                    android:id="@+id/daily_right_weather_icon4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/day_clear" />

            </LinearLayout>

            <TextView
                android:id="@+id/daily_temperature4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="temperature"

                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>
    </androidx.gridlayout.widget.GridLayout>

</FrameLayout>