<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <RelativeLayout
                android:id="@+id/weather_root_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/address_name"
                    style="@style/text_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="4dp"
                    android:text="주소명"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/updated_datetime"
                    style="@style/text_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/address_name"
                    android:layout_alignRight="@id/address_name"
                    android:layout_marginBottom="160dp"
                    android:text="업데이트 시각"
                    android:textAlignment="viewEnd"
                    android:textSize="13sp" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/simple_current_conditions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/updated_datetime"
                    android:layout_marginBottom="24dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/simple_hourly_forecast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/simple_current_conditions"
                    android:layout_marginBottom="32dp" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/simple_daily_forecast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/simple_hourly_forecast"
                    android:layout_marginBottom="32dp" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/detail_current_conditions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/simple_daily_forecast"
                    android:layout_marginBottom="32dp" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/simple_air_quality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_current_conditions"
                    android:layout_marginBottom="32dp" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/sun_set_rise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/simple_air_quality"
                    android:layout_marginBottom="32dp" />
            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

        <com.lifedawn.bestweather.commons.views.CustomProgressView
            android:id="@+id/custom_progress_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>
</layout>