<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.github.matteobattilana.weather.WeatherView
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/rootSubLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CFC8C8"
            >

            <ImageView
                android:id="@+id/current_conditions_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />


            <include
                android:id="@+id/main_toolbar"
                layout="@layout/app_main_toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbarHeight"
                android:layout_alignParentTop="true"
                />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/main_toolbar"
                />


            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/main_toolbar"
                android:layout_alignParentBottom="true"
                android:overScrollMode="never"
                >

                <RelativeLayout
                    android:id="@+id/weather_root_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:id="@+id/headerLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="140dp"
                        android:orientation="vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"

                        >

                        <LinearLayout
                            android:id="@+id/weatherDataSourceLayout"
                            style="@style/forecasts_card_background"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="16dp"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            >

                            <ImageView
                                android:id="@+id/weatherDataSourceIcon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="4dp"
                                android:scaleType="centerInside"
                                />

                            <TextView
                                android:id="@+id/weatherDataSourceName"
                                style="@style/text_shadow_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="?attr/selectableItemBackground"
                                android:drawableRight="@drawable/expand_more"
                                android:drawableTint="@color/white"
                                android:gravity="center_vertical"
                                android:text="@string/loading"
                                android:textSize="16sp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            style="@style/forecasts_card_background"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="6dp"
                            android:orientation="vertical"
                            android:padding="8dp"
                            >

                            <TextView
                                android:id="@+id/address_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/loading"
                                android:textColor="@color/white"
                                android:textSize="22sp"
                                android:layout_marginBottom="4dp"
                                />

                            <TextView
                                android:id="@+id/updated_datetime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="@string/loading"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                app:drawableLeftCompat="@drawable/refresh"
                                app:drawableTint="@color/white"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/simple_current_conditions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/headerLayout"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        />

                    <LinearLayout
                        android:id="@+id/flickrLayout"
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:layout_below="@id/simple_current_conditions"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal"
                        android:paddingLeft="72dp"
                        android:paddingRight="24dp"
                        >

                        <TextView
                            android:id="@+id/flickrImageUrl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-light"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:textSize="10dp"
                            />

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/loadingAnimation"
                            android:layout_width="34dp"
                            android:layout_height="match_parent"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/bluedottedprogress"
                            />

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="6dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/flickrlogo"
                            />

                    </LinearLayout>

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/simple_hourly_forecast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/flickrLayout"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="28dp"
                        />

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/simple_daily_forecast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/simple_hourly_forecast"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="28dp"
                        />

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/detail_current_conditions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/simple_daily_forecast"
                        android:layout_marginBottom="28dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        />

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/simple_air_quality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/detail_current_conditions"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="24dp"
                        />

                    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/adViewBelowAirQuality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/simple_air_quality"
                        android:layout_marginBottom="24dp"
                        ads:adSize="BANNER"
                        ads:adUnitId="@string/BANNER_testUnitId"
                        />

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/sun_set_rise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/adViewBelowAirQuality"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="24dp"
                        />

                    <com.google.android.ads.nativetemplates.TemplateView
                        android:id="@+id/adViewBottom"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/sun_set_rise"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="24dp"
                        app:gnt_template_type="@layout/gnt_medium_template_view"
                        />

                    <include
                        android:id="@+id/weatherDataInfo"
                        layout="@layout/weather_data_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/adViewBottom"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="24dp"
                        />
                </RelativeLayout>

            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>
    </com.github.matteobattilana.weather.WeatherView>

</layout>