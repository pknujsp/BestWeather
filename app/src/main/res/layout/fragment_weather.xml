<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/current_conditions_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_main_color"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/main_toolbar"
                layout="@layout/app_main_toolbar" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never">

                <RelativeLayout
                    android:id="@+id/weather_root_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:id="@+id/weatherDataSourceLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/weatherDataSourceIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="4dp"
                            android:scaleType="centerInside" />

                        <TextView
                            android:id="@+id/weatherDataSourceName"
                            style="@style/text_shadow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:drawableRight="@drawable/expand_more"
                            android:drawableTint="@color/purple_500"
                            android:fontFamily="sans-serif-condensed"
                            android:text="@string/loading"
                            android:textAlignment="center"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/address_name"
                        style="@style/text_shadow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/weatherDataSourceLayout"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/loading"
                        android:textAlignment="center"
                        android:textSize="22sp" />

                    <RelativeLayout
                        android:id="@+id/refreshDateTimeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@id/address_name"
                        android:layout_alignRight="@id/address_name"
                        android:layout_marginBottom="150dp">

                        <ImageView
                            android:id="@+id/refreshIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/updated_datetime"
                            android:layout_alignBottom="@id/updated_datetime"
                            android:layout_alignParentLeft="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/refresh"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/updated_datetime"
                            style="@style/text_shadow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/refreshIcon"
                            android:fontFamily="sans-serif-condensed"
                            android:text="@string/loading"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/simple_current_conditions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/refreshDateTimeLayout"
                        android:layout_marginBottom="8dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp" />

                    <LinearLayout
                        android:id="@+id/flickrLayout"
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:layout_below="@id/simple_current_conditions"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/flickrlogo" />


                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/loadingAnimation"
                            android:layout_width="34dp"
                            android:layout_height="match_parent"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/bluedottedprogress" />

                        <TextView
                            android:id="@+id/flickrImageUrl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:fontFamily="sans-serif-light"
                            android:textSize="10dp" />


                    </LinearLayout>

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/simple_hourly_forecast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/flickrLayout"
                        android:layout_marginBottom="32dp" />

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/simple_daily_forecast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/simple_hourly_forecast"
                        android:layout_marginBottom="32dp" />

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/detail_current_conditions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/simple_daily_forecast"
                        android:layout_marginBottom="32dp" />

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/simple_air_quality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/detail_current_conditions"
                        android:layout_marginBottom="24dp" />

                    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/adViewBelowAirQuality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/simple_air_quality"
                        android:layout_marginBottom="24dp"
                        ads:adSize="BANNER"
                        ads:adUnitId="ca-app-pub-3940256099942544/6300978111" />

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/sun_set_rise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/adViewBelowAirQuality"
                        android:layout_marginBottom="24dp" />

                    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/adViewBottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sun_set_rise"
                        android:layout_marginBottom="24dp"
                        ads:adSize="BANNER"
                        ads:adUnitId="ca-app-pub-3940256099942544/6300978111" />
                </RelativeLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </FrameLayout>

</layout>