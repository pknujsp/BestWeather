<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/appWidgetBackgroundColor"
    android:orientation="vertical"
    android:padding="@dimen/widget_padding"
    android:theme="@style/ThemeOverlay.BestWeather.AppWidgetContainer">

    <include
        android:id="@+id/current_conditions"
        layout="@layout/simple_current_conditions_view_in_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/hourly_forecast"
        layout="@layout/simple_hourly_forecast_view_in_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/daily_forecast"
        layout="@layout/simple_daily_forecast_view_in_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>