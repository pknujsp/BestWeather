<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@drawable/searchview_background_stroke"
    android:backgroundTint="#CCFFFFFF"
    android:clipChildren="false"
    android:elevation="3dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/searchviewPaddingHorizontal"
    android:paddingVertical="@dimen/searchviewPaddingVertical"
    >

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/back"
        />

    <com.lifedawn.bestweather.commons.views.CustomEditText
        android:id="@+id/edittext"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:hint="@string/hint_input_address"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:textSize="14sp"
        />

    <ImageButton
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/search"
        />
</LinearLayout>