<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue"
    android:minHeight="88dp"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/refreshDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:drawableRight="@drawable/refresh"
            android:gravity="center_vertical"
            android:text="refreshDateTime"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/currentConditionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="2dp"
                android:text="addressName"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <ImageView
                android:id="@+id/weatherIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_below="@id/address"
                android:layout_alignLeft="@id/address"
                android:scaleType="centerInside"
                android:src="@drawable/temp_icon" />

            <LinearLayout
                android:id="@+id/descriptionAndTempLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignTop="@id/weatherIcon"
                android:layout_alignBottom="@id/weatherIcon"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@id/weatherIcon"
                android:orientation="vertical"
                android:weightSum="1.0">

                <TextView
                    android:id="@+id/weatherDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="description"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/temp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="temp"
                    android:textColor="@color/white" />
            </LinearLayout>

            <include
                android:id="@+id/airQuality"
                layout="@layout/viewgroup_drawable_with_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/descriptionAndTempLayout"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@id/descriptionAndTempLayout" />

            <include
                android:id="@+id/precipitation"
                layout="@layout/viewgroup_drawable_with_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/airQuality"
                android:layout_alignLeft="@id/airQuality" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/hourlyForecast"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" />


            <LinearLayout
                android:id="@+id/dailyForecast"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>