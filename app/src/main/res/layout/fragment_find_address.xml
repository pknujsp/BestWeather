<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor"
        android:orientation="vertical"
        >

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            >


            <ImageView
                android:id="@+id/currentLocationBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:background="?attr/selectableItemBackground"
                android:backgroundTint="@color/gray200"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/location"
                />


            <com.lifedawn.bestweather.commons.views.CustomSearchView
                android:id="@+id/search_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:backBtnVisibility="gone"
                app:hint="@string/hint_input_address"
                app:searchBtnVisibility="visible"
                />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/address_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:scrollbars="none"
            tools:listitem="@layout/found_address_item"
            />

        <com.lifedawn.bestweather.commons.views.ProgressResultView
            android:id="@+id/progress_result_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            />

    </LinearLayout>
</layout>