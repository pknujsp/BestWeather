<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:text="@string/pm10_str"
        android:textColor="@color/black"
        android:textSize="@dimen/labelTextSizeInSimpleAirQualityItem" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gradeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:text="20"
            android:textColor="@color/black"
            android:textSize="@dimen/gradeValueTextSizeInSimpleAirQualityItem" />

        <TextView
            android:id="@+id/gradeDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aqi_1_good"
            android:textColor="@color/black"
            android:textSize="@dimen/gradeDescriptionTextSizeInSimpleAirQualityItem" />

    </LinearLayout>

</RelativeLayout>