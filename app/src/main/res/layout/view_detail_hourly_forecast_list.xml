<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingVertical="6dp"
        android:weightSum="1.0">


        <LinearLayout
            android:id="@+id/datetime_layout"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10.12 Tue"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12 AM"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/temp_layout"
            android:layout_toRightOf="@id/datetime_layout"
            android:gravity="center|end"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/pop_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pop"
                    app:tint="@color/blue" />

                <TextView
                    android:id="@+id/pop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:textColor="@color/blue"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/volume_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/rain_volume_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="6dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/raindrop"
                        app:tint="@color/blue" />

                    <TextView
                        android:id="@+id/rain_volume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.0mm"
                        android:textColor="@color/blue"

                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/snow_volume_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="6dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/snowparticle"
                        app:tint="@color/blue" />

                    <TextView
                        android:id="@+id/snow_volume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.0cm"
                        android:textColor="@color/blue"
                        android:textSize="13sp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/temp_layout"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/weather_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="6dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/day_clear" />

            <TextView
                android:id="@+id/temp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:paddingVertical="3dp"
                android:scaleX="0.95"
                android:singleLine="true"
                android:text="-55Â°"
                android:textColor="@color/black" />

        </LinearLayout>

    </RelativeLayout>
</layout>